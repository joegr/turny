{
  "name": "tournament-platform-client-tests",
  "version": "1.0.0",
  "description": "Client-side tests for tournament platform",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/dom": "^9.3.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/setup.js"],
    "testMatch": ["**/*.test.js"],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!setup.js",
      "!jest.config.js"
    ]
  }
}
